.staff {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 156rpx;
  background-color: #fff;
}
.staff-img {
  width: 92rpx;
  height: 92rpx;
  margin: 32rpx 34rpx 32rpx 50rpx;
}
.staff-info {
  flex: 1;
}
.info-main {
  font-size: 28rpx;
  color: #626161;
}
.info-main text {
  margin-right: 64rpx;
}
.info-extra {
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}
.info-extra text {
  margin-right: 20rpx;
}
.more-icon {
  width: 12rpx;
  height: 30rpx;
  margin-right: 58rpx;
}
.personal-info {
  width: 100%;
  height: 108rpx;
  background-color: #fff;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}
.point {
  width: 12rpx;
  height: 12rpx;
  background-color: #35bd00;
  border-radius: 50%;
  margin-left: 90rpx;
}
.personal-info-main {
  flex: 1;
  margin-left: 74rpx;
}
.info-img {
  width: 28rpx;
  height: 32rpx;
  margin-right: 54rpx;
}
.next-btn {
  width: 660rpx;
  height: 72rpx;
  background-color: #35bd00;
  color: #fff;
  font-size: 28rpx;
  border-radius: 36rpx;
  text-align: center;
  line-height: 72rpx;
  margin: 40rpx auto 20rpx;
}
.promise-info {
  display: flex;
}
.promise-item {
  flex: 1;
  color: #999;
  font-size: 24rpx;
  line-height: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.borderLR {
  border-left: 1rpx solid #000;
  border-right: 1rpx solid #000;
}
.promise-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 14rpx;
}